<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:mandelbrot.Views"
             x:Class="mandelbrot.Views.Settings" x:DataType="views:Settings">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <Button Text="Toggle theme" Clicked="OnToggleTheme" BackgroundColor="{Binding BackgroundColor}" />
                <Picker
                    
                    ItemsSource="{Binding Approaches, Mode=OneTime}"
                    SelectedItem="{Binding SelectedApproach, Mode=TwoWay}" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>